<h1>Events#index</h1>
<%# <p>Find me in app/views/events/index.html.erb</p> %>
<ul>
    List of future events
    <% @future_events.each do |event| %>
        <li>
            <%= link_to event.name, event %>
        </li>
    <% end %>
    <br>
    <br>
    List of past events

    <% @past_events.each do |event| %>
        <li>
            <%= link_to event.name, event %>
        </li>
    <% end %>

</ul>

<%= link_to "New event", new_event_path(@event) %>
